                <radius>15</radius>
                <tickInterval>1500</tickInterval>
                <thoughtDef>JE_WaifuThought</thoughtDef>
            </li>
            <li Class="AnimalBehaviours.CompProperties_FixedGender">
                <gender>Female</gender>
            </li>
        </comps>
